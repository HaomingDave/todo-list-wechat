/**index.wxss**/
@import "../../plugin/css/grid.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.mb10 {
  margin-bottom: 10px;
}

.add image {
  width: 60px;
}

.add-animation {
  animation: larger 0.5s;
}

.add {
  display:flex;     
  justify-content: center;   
}

@keyframes larger{
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.2);
  }
  100%{
    transform: scale(1);
  } 
}

.input-area image {
  width: 30px;
  height: 30px;
}
