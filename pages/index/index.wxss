/**index.wxss**/
@import "../../plugin/css/grid.wxss";

.wrapper {
  position: relative;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  height: 800px;
  width: 100%;
}

.mb10 {
  margin-bottom: 10px;
}

.add image {
  width: 60px;
  height: 60px;
  display: inline-block;
  transition: transform 0.3s;
}
.enlarge {
  transform: scale(1.2);
}

.add-animation {
  animation: larger 0.5s;
}

.add { 
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
  padding: 100rpx 0;
}

@keyframes larger{
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.2);
  }
  100%{
    transform: scale(1);
  } 
}

.input-area {
  height: 0;
  transition: height 0.2s;
}
.input-area image {
  width: 30px;
  height: 30px;
}
.input-area .input-wrapper {
  display: none;
  padding: 20px;
}

.input-area-show {
  height: 60px;
}
.input-show {
  display: block!important;
}
.task-wrapper {
  min-height: 400px;
}
.mask {
  width: 100%;
  height: 100%;
  background-color: #fff;
  opacity: 0.5;
  position: absolute;
  display: none;
  z-index: 98;
  top: 0;
  left: 0;
}
.wave-mask {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: absolute;
  display: none;
  top: 0;
  left: 0;
}
.container {
  position: relative;
  width: 100%;
  height: 500px;
}
.microphone {
  width: 20px!important;
}
.speak-mask {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #fff;
  position: absolute;
  display: none;
  z-index: 99;
}
.show {
  display: flex;
  justify-content: center;
  align-items: center;
}
.speak-icon {
  width: 50px;
}
.task-list {
  margin: 20px;
  padding: 0 30px;
}
.task {
  margin-bottom: 15px;
}