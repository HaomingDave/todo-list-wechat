/**index.wxss**/
@import "../../plugin/css/grid.wxss";

.wrapper {
  position: relative;
}

.mb10 {
  margin-bottom: 10px;
}

.add image {
  width: 60px;
  height: 60px;
  display: inline-block;
  transition: transform 0.3s;
}
.enlarge {
  transform: scale(1.2);
}

.add-animation {
  animation: larger 0.5s;
}

.add { 
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
  padding: 100rpx 0;
  z-index: 1;
}

@keyframes larger{
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.2);
  }
  100%{
    transform: scale(1);
  } 
}

.input-area {
  height: 0;
  transition: height 0.2s;
}
.input-area image {
  width: 30px;
  height: 30px;
}
