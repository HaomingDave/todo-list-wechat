<!-- 组件模板 -->
<view>
  <view class="task-list">
    <view wx:for="{{taskList}}" class="task">
      <label class="checkbox task-label">
        <checkbox value="{{item}}" class="task-checkbox"/>
        <view>
          <text>{{item.content}}</text>
          <view class="task-tag" wx:if="{{item.tag}}">
            #{{item.tag}}
          </view>
        </view>
      </label>
    </view>
  </view>
</view>